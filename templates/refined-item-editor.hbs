<div style="overflow-y:scroll;height:400px;">
    <fieldset class="droppable refinement">
        <legend>Refinement</legend>
        <label for="refinement-type">Refinement type</label>
        <select name="refinement-type" id="refinement-type" class="refinement-type">
            {{#each data.possibleRefinements }}
            <option value="{{this.key}}" {{#if (eq this.key refinement.selected)}}selected{{/if}}>{{this.label}}
            </option>
            {{/each}}
        </select>
        <label for="refinement-value">Value</label>
        <input type="number" name="refinement-value" id="refinement-value" value="{{data.refinement.value}}" step="0.1" />
    </fieldset>

    {{#each data.imbues as | imbue |}}
    <fieldset class="droppable imbue">
        <legend>Imbue</legend>
        <label for="imbue-{{@index}}-type">Imbue type</label>
        <select name="imbue-{{@index}}-type" id="imbue-{{@index}}-type" class="imbue-type">
            <option value=""></option>
            {{#each ../data.possibleImbues }}
            <option value="{{this.key}}" {{#if (eq this.key imbue.selected)}}selected{{/if}}>{{this.label}}</option>
            {{/each}}
        </select>
        <label for="imbue-{{@index}}-value">Value</label>
        <input type="number" name="imbue-{{@index}}-value" id="imbue-{{@index}}-value" data-imbue-index="{{@index}}" class="imbue-value"
            value="{{this.value}}" />
    </fieldset>
    {{/each}}

    <fieldset class="droppable new-imbue">
        <legend>New Imbue</legend>
        <label for="new-imbue-type">Imbue type</label>
        <select name="new-imbue-type" id="new-imbue-type">
            <option value=""></option>
            {{#each data.possibleImbues }}
            <option value="{{this.key}}">{{this.label}}</option>
            {{/each}}
        </select>
    </fieldset>
</div>