<div class="refined-item-header addendum">
    <h3>{{localize "pf2e-monster-parts.refined-item.label"}}</h3>
    <p><strong>{{localize "pf2e-monster-parts.refined-item.material-label" material=refinement.label level=refinement.level value=refinement.value}}</strong>{{#if refinement.flavor}} {{{refinement.flavor}}}{{/if}}</p>
    {{#if (gt refinement.notes.length 0)}}
        <ul>
            {{#each refinement.notes}}
                <li>{{{this}}}</li>
            {{/each}}
        </ul>
    {{/if}}
    {{#if (gt imbues.length 0)}}
        <hr>{{/if}}
    {{#each imbues as |imbue|}}
        <p><strong>{{localize "pf2e-monster-parts.refined-item.material-label" material=imbue.label level=imbue.level value=imbue.value}}</strong>{{#if imbue.flavor}} {{{imbue.flavor}}}{{/if}}</p>
        {{#if (gt imbue.notes.length 0)}}
            <ul>
                {{#each imbue.notes}}
                    <li>{{{this}}}</li>
                {{/each}}
            </ul>
        {{/if}}
    {{/each}}
</div>