<div class="monster-part-header addendum">
    <h3>{{localize "pf2e-monster-parts.monster-part.description-header" value=@root.coins }}</h3>
    <table>
        <tr>
            <td style="width:50%"><strong>{{localize "pf2e-monster-parts.material.refinement"}}</strong></td>
            <td><strong>{{localize "pf2e-monster-parts.material.imbuement"}}</strong></td>
        </tr>
        <tr>
            <td>{{#if (gt refinements.length 0)}}
                <ul>
                    {{#each refinements}}
                        <li>{{this}}</li>
                    {{/each}}
                </ul>
            {{/if}}</td>
            <td>{{#if (gt imbues.length 0)}}
                <ul>
                    {{#each imbues}}
                        <li><a
                            onclick="game.modules.get('pf2e-monster-parts').api.renderSummaryJournal('{{this.key}}')">{{this.label}}</a>
                        </li>
                    {{/each}}
                </ul>
            {{/if}}</td>
        </tr>
    </table>
</div>